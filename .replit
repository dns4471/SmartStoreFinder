modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["chromium", "imagemagick"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Chrome Extension Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Chrome Extension Test"

[[workflows.workflow]]
name = "Chrome Extension Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Chrome Extension Test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chromium --load-extension=. --new-window --no-sandbox"

[[ports]]
localPort = 5000
externalPort = 80
